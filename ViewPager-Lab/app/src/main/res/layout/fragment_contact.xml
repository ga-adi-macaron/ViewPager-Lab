<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/contactprompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="I can be reached via any of the following methods:"
        android:textColor="#111"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/emailtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Email: nshuvalov89@gmail.com"
        android:textColor="#333"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/phonetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Phone: 917-496-7007"
        android:textColor="#333"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/mailingaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Carrier Pidgeon Address: 42 Wallaby Way, Sydney"
        android:textColor="#333"
        android:textSize="15sp"
    />
    <TextView
        android:id="@+id/pidgeondirections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Smoke signal availability: Solar noon. Allow 1-4 business days for a reply."
        android:textColor="#333"
        android:textSize="15sp"/>

</LinearLayout>